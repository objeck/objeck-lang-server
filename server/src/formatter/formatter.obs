use System.IO.File;
use Collection.Generic;

class CodeFormatter {
	function : Main(args : String[]) ~ Nil {
		if(args->Size() = 1) {			
			input := FileReader->ReadFile(args[0]);
			if(input <> Nil) {
				scanner := Scanner->New(input);
				if(scanner->Scan()) {
					tokens := scanner->GetTokens();
					each(i : tokens) {
						token := tokens->Get(i);
						"token={$token}"->PrintLine();
					};
				};
			};
		};
	}
}